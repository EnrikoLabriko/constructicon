{
  "name": "constructicon",
  "version": "0.3.0",
  "description": "Library of re-usable components for Professional Services projects",
  "main": "index.js",
  "scripts": {
    "start": "styleguidist server",
    "test:lint": "standard",
    "test:unit": "mocha source/**/**/__tests__/*.js",
    "test": "npm run test:lint && npm run test:unit",
    "build": "babel source -d dist",
    "build:styleguide": "styleguidist build",
    "deploy:styleguide": "npm run build:styleguide && gh-pages -d styleguide",
    "deploy:prepare": "gulp npm-prepare",
    "prepublish": "npm run test && npm run build && npm run deploy:prepare"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/everydayhero/constructicon.git"
  },
  "bugs": {
    "url": "https://github.com/everydayhero/constructicon/issues"
  },
  "author": "Dan Henderson <dan.henderson@everydayhero.com>",
  "license": "MIT",
  "standard": {
    "ignore": [
      "source/**/**/__tests__/*.js",
      "test",
      "gulpfile.js"
    ],
    "globals": [
      "it",
      "describe",
      "mount",
      "expect",
      "utils"
    ]
  },
  "dependencies": {
    "cxsync": "^1.0.9",
    "lodash": "^4.17.4",
    "minimal.css": "^1.0.0",
    "react": "^0.14.8",
    "react-dom": "0.14.8",
    "react-modal": "^1.6.5",
    "react-slick": "^0.14.5"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "enzyme": "^2.7.0",
    "gh-pages": "^0.12.0",
    "gulp": "^3.9.1",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "jsdom": "^9.9.1",
    "mocha": "^2.5.3",
    "react-addons-test-utils": "0.14.8",
    "react-styleguidist": "^4.5.1",
    "standard": "^8.0.0",
    "webpack": "^1.14.0"
  }
}
